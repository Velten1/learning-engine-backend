// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//create a user table with id, email, password, name, createdAt, updatedAt
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pomodoros Pomodoro[] @relation("UserPomodoros")
  reflections Reflection[] @relation("UserReflections")
  decks Deck[] @relation("UserDecks")
}

//create a pomorodo table with id, userId, startedAt, endedAt, status, createdAt, updatedAt
model Pomodoro {
  id        String   @id @default(uuid())
  userId    String
  startedAt DateTime @default(now())
  expiresAt DateTime // new: when pomodoro session will be expired
  endedAt   DateTime?
  duration  Int?
  status    PomodoroStatus @default(ACTIVE)
  abandonmentReason String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reflection Reflection? @relation("PomodoroReflections")
  user      User     @relation("UserPomodoros", fields: [userId], references: [id])

  @@index([userId])
}

enum PomodoroStatus {
  ACTIVE
  COMPLETED
  ABANDONED
}

//create a reflection table with id, pomodoroId, userId, topic, whatIThought, whatItActuallyIs, summary, mandatoryQuestion, optionalQuestion, createdAt, updatedAt
model Reflection {
  id        String   @id @default(uuid())
  pomodoroId String  @unique
  userId    String
  topic     String
  whatIThought String
  whatItActuallyIs String
  summary String
  mandatoryQuestion String
  optionalQuestion String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation("UserReflections", fields: [userId], references: [id])
  pomodoro  Pomodoro @relation("PomodoroReflections", fields: [pomodoroId], references: [id])

  @@index([userId])
  @@index([pomodoroId])
}

model Question {
  id        String   @id @default(uuid())
  text      String   @db.Text
  category  String?  @default("general")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
}

model Deck {
    id          String   @id @default(uuid())
  userId      String
  name        String   @db.VarChar(100)
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user  User  @relation("UserDecks", fields: [userId], references: [id])
  cards Card[]

  @@index([userId])
}

model Card {
  id          String   @id @default(uuid())
  deckId      String
  front       String   @db.Text
  back        String   @db.Text
  nextReviewAt DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  deck          Deck           @relation(fields: [deckId], references: [id], onDelete: Cascade)
  reviewHistory ReviewHistory[]

  @@index([deckId])
  @@index([nextReviewAt])
}

enum ReviewRating {
  WRONG
  GOOD
  EASY
}

model ReviewHistory {
  id        String       @id @default(uuid())
  cardId    String
  rating    ReviewRating
  reviewedAt DateTime   @default(now())

  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@index([cardId])
  @@index([reviewedAt])
}