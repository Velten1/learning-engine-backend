// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//create a user table with id, email, password, name, createdAt, updatedAt
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pomodoros Pomodoro[] @relation("UserPomodoros")
  reflections Reflection[] @relation("UserReflections")
  history History[] @relation("UserHistory")
}

//create a pomorodo table with id, userId, startedAt, endedAt, status, createdAt, updatedAt
model Pomodoro {
  id        String   @id @default(uuid())
  userId    String
  startedAt DateTime @default(now())
  expiresAt DateTime // new: when pomodoro session will be expired
  endedAt   DateTime?
  duration  Int?
  status    PomodoroStatus @default(ACTIVE)
  abandonmentReason String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reflection Reflection? @relation("PomodoroReflections")
  history History[] @relation("PomodoroHistory")
  user      User     @relation("UserPomodoros", fields: [userId], references: [id])

  @@index([userId])
}

enum PomodoroStatus {
  ACTIVE
  COMPLETED
  ABANDONED
}

//create a reflection table with id, pomodoroId, userId, topic, whatIThought, whatItActuallyIs, summary, mandatoryQuestion, optionalQuestion, createdAt, updatedAt
model Reflection {
  id        String   @id @default(uuid())
  pomodoroId String  @unique
  userId    String
  topic     String
  whatIThought String
  whatItActuallyIs String
  summary String
  mandatoryQuestion String
  optionalQuestion String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation("UserReflections", fields: [userId], references: [id])
  pomodoro  Pomodoro @relation("PomodoroReflections", fields: [pomodoroId], references: [id])
  history History[] @relation("ReflectionHistory")

  @@index([userId])
  @@index([pomodoroId])
}

//create a history table with id, userId, pomodoroId, reflectionId, createdAt, updatedAt
//this table will store the history of the user's pomodoro sessions and reflections
model History {
  id        String   @id @default(uuid())
  userId    String
  pomodoroId String
  reflectionId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation("UserHistory", fields: [userId], references: [id])
  pomodoro  Pomodoro @relation("PomodoroHistory", fields: [pomodoroId], references: [id])
  reflection Reflection? @relation("ReflectionHistory", fields: [reflectionId], references: [id])
}