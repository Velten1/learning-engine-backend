// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//create a user table with id, email, password, name, createdAt, updatedAt
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//create a pomorodo table with id, userId, startedAt, endedAt, status, createdAt, updatedAt
model Pomodoro {
  id        String   @id @default(uuid())
  userId    String
  startedAt DateTime
  endedAt   DateTime
  duration  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//create a reflection table with id, pomodoroId, userId, topic, whatIThought, whatItActuallyIs, summary, mandatoryQuestion, optionalQuestion, createdAt, updatedAt
model Reflection {
  id        String   @id @default(uuid())
  pomodoroId String
  userId    String
  topic     String
  whatIThought String
  whatItActuallyIs String
  summary String
  mandatoryQuestion String
  optionalQuestion String @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


